<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="823dp"
    android:background="@drawable/nen"
    android:backgroundTintMode="screen"
    app:backgroundTint="@null"
    tools:context=".Login">

    <Button
        android:id="@+id/btnforgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="430dp"
        android:background="#FFE8C6"
        android:text="Quên mât khẩu"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#9F9A9A" />

    <Button
        android:id="@+id/btngoogle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/google"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btninstagram"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/instagram"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntwiter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/twitter"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="101dp"
        android:text="Chào mừng trở lại"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="150dp"
        android:text="Vui lòng đăng nhập để tiếp tục"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtusername"
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/login_form"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtpass"
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="346dp"
        android:background="@drawable/login_form"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ckbsaveaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="432dp"
        android:text="Lưu thông tin"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/thanhtoan"
        android:text="Đăng nhập"
        android:textSize="26.47sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="566dp"
        android:text="Hoặc đặng nhập bằng"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="276dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/useracount" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="358dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unlock" />

    <Button
        android:id="@+id/btnSingup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="655dp"
        android:background="#00000000"
        android:text="Đăng ký"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#9F9A9A" />

    <Button
        android:id="@+id/btnfacebook"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/facebook"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="669dp"
        android:text="Không có tài khoản?"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>