<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDCC6"
    tools:context=".Aboutus">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgleftken"
            android:src="@drawable/leftken"
            android:layout_marginLeft="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/txtproken"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgleftken"
            android:gravity="center"
            android:text="ABOUT US"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nhom"
        android:background="@drawable/custom_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/profile"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="NHÓM 12"
            android:textColor="#8E0B30"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dung"
        android:background="@drawable/custom_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/nhom"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgproken"
            android:src="@drawable/anhdung"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtnameken"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgproken"
            android:text="Nguyễn Mạnh Dũng"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtactiken"
            android:text="21115053120209"
            android:layout_toRightOf="@+id/imgproken"
            android:layout_below="@+id/txtnameken"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hung"
        android:background="@drawable/custom_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/dung"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprohung"
            android:src="@drawable/anhhung"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtnamehung"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgprohung"
            android:text="Nguyễn Nhật Hưng"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtactihung"
            android:text="21115053120219"
            android:layout_toRightOf="@+id/imgprohung"
            android:layout_below="@+id/txtnamehung"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hoang"
        android:background="@drawable/custom_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hung"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprohoang"
            android:src="@drawable/anhhoang"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtnamehoang"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgprohoang"
            android:text="Lê Viết Huy Hoàng"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtactihoang"
            android:text="21115053120217"
            android:layout_toRightOf="@+id/imgprohoang"
            android:layout_below="@+id/txtnamehoang"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/huy"
        android:background="@drawable/custom_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hoang"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprohuy"
            android:src="@drawable/anhhuy"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtnamehuy"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgprohuy"
            android:text="Trịnh Công Huy"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtactihuy"
            android:text="21115053120320"
            android:layout_toRightOf="@+id/imgprohuy"
            android:layout_below="@+id/txtnamehuy"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kinh"
        android:background="@drawable/custom_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/huy"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprokinh"
            android:src="@drawable/anhkinh"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtnamekinh"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgprokinh"
            android:text="Phạm Phúc Kính"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtactikinh"
            android:text="21115053120225"
            android:layout_toRightOf="@+id/imgprokinh"
            android:layout_below="@+id/txtnamekinh"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <View
        android:id="@+id/viewken"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_above="@+id/navigation"
        />

    <LinearLayout
        android:id="@+id/navigation"
        android:weightSum="4"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnhome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home"
            app:backgroundTint="@null" />


        <Button
            android:id="@+id/btnlove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/love"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btncart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cart"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnuser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user"
            app:backgroundTint="@null" />
    </LinearLayout>


</RelativeLayout>